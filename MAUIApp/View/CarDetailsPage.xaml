<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMAUIApp.View.CarDetailsPage"
             xmlns:model="clr-namespace:MyMAUIApp.Models"
             xmlns:vm="clr-namespace:MyMAUIApp.ViewModel"
             x:DataType="vm:CarDetailsViewModel"
             Title="{Binding Car.Model }">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Car.Make}"
            VerticalOptions="Center"  FontSize="Medium"
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Car.Model}"
            VerticalOptions="Center" FontSize="Medium"
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Car.Vin}"
            VerticalOptions="Center" FontSize="Medium"
            HorizontalOptions="Center" />   
    </VerticalStackLayout>
</ContentPage>