<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMAUIApp.TestXML"
             xmlns:resources ="clr-namespace:MyMAUIApp.Resources"
             Title="TestXML">
    <VerticalStackLayout>
        <Label 
            Text="Count 0"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            x:Name="lblCounter"
            TextColor="{x:Static Member=resources:SharedResource.FontColor}"
            FontAttributes="Bold" IsEnabled="True"/>
        <Button
            Text="Click to count"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>